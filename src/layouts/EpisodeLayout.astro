---
import BaseLayout from "./BaseLayout.astro";
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";
import HeaderCard from "~/components/headerCard/HeaderCard.astro";
import astropodConfig from "../../.astropod/astropod.config.json";

const { title, explicit, pubDate, cover, description } = Astro.props;
dayjs.extend(localizedFormat);
const displayDate = dayjs(pubDate).format("ll");
---

<BaseLayout title={`${title} - ${astropodConfig.name}`} description={description} image={cover}>
  <HeaderCard title={title} subtitle={astropodConfig.name} cover={cover} explicit={explicit} />

  <main class="md:flex md:justify-center">
    <article class="card prose min-w-full prose-img:mx-auto bg-base-100 shadow-md p-8 mt-12">
      <slot />
      <section>
        <h3>Links</h3>
        <ul>
          <li>
            Support this podcast: <a href="https://anchor.fm/michele-lynch/support">anchor.fm/michele-lynch/support</a>
          </li>
          <li>
            Send in a Voice Message: <a href="https://podcasters.spotify.com/pod/show/michele-lynch/message">podcasters.spotify.com/pod/show/michele-lynch/message</a>
          </li>
          <li>
            Join our Facebook Group: <a href="https://alchemicalsouls.group">alchemicalsouls.group<a>
          </li>
        </ul>
      </section>
    </article>
  </main>
</BaseLayout>
